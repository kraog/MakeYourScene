<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="concertListVM"
            type="kraog.moveyourscene.viewmodel.concerts.ConcertListVM" />
    </data>


    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".view.concerts.ConcertListActivity"
        android:background="@drawable/concert_list_background">


        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                bind:items="@{concertListVM.concertList}"/>

        <!-- Action Bar -->
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:textAlignment="textEnd"
            app:theme="@style/toolbar_white_translucid">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:title="@string/band_title"
                android:logo="@drawable/rock_gesture"
                app:layout_scrollFlags="scroll|enterAlways" />

         <!-- Tab Component-->
        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:onTabSelectedListener="@{concertListVM.getTabListener}"/>

        </android.support.design.widget.AppBarLayout>

        </android.support.design.widget.CoordinatorLayout>

        <!-- Drawer Menu Recycler View-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/menuDrawer"
            android:layout_width="320dp"
            android:layout_height="400dp"
            android:layout_gravity="left"

            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:background="@drawable/menu_shape"
            android:scrollbars="vertical"
            bind:itemmenu="@{concertListVM.menuItemList}"
            bind:user="@{concertListVM.user}"/>


</android.support.v4.widget.DrawerLayout>

</layout>